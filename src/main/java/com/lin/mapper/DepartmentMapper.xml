<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.dao.DepartmentDaoI">
	<!-- 查询人员部门 -->
	<resultMap id="DepartmentMap" type="com.lin.domain.Department">
		<id column="DEP_ID" property="departmentID" jdbcType="CHAR" />
		<result column="DEP_NAME" property="departmentName" jdbcType="CHAR" />
	</resultMap>
	<select id="selectAllDepartment" parameterType="java.lang.String"
		resultMap="DepartmentMap">
		select t.organ_id DEP_ID,t.organ_name DEP_NAME from
		appuser.address_organization t where t.pid =(
		select o.pid from appuser.address_organization o
		where o.organ_id = #{0})
	</select>
</mapper>